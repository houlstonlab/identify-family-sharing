
singularity {
  enabled = true
  autoMounts = true
}

params {
  // Containers
  bcftools      = 'bcftools.1.19'
  samtools      = 'samtools.1.9'
  bioconductor  = 'mahshaaban/bioconductor:3.19'
  rocker        = 'rocker/tidyverse:latest'
  rvs           = 'rvs.0.1'
  plink         = 'plink.1.9.0'
  famagg        = 'bioconductor-famagg-1.30.0'
  
  // Default params
  // variants  = "$TOY_DATASETS/wes-sarek/*.variants.vcf.gz{,.tbi}"
  // pedigrees = "$TOY_DATASETS/wes-sarek/*.families.ped"
  genome        = 'hg38'
  style         = 'UCSC'
  GQ            = 10
  DP            = 5
  VAF           = 0.2
  AF            = 0.5
  MAX_AF        = 0.5
  DS            = 0.2
  CADD          = 5
  categories    = 'Damaging,High,Rare'
  type          = 'complete,partial'
  alpha         = 1
  AF_COL        = 'gnomADe_AF'
}

profiles {
  // Resource profiles
  local     { includeConfig 'conf/local.config' }
  cluster   { includeConfig 'conf/cluster.config' }
  dynamic   { includeConfig 'conf/dynamic.config' }
  
  // Test profile (Same as default params)
  test {
    params {
      variants  = "$TOY_DATASETS/wes-sarek/*.variants.vcf.gz{,.tbi}"
      pedigrees = "$TOY_DATASETS/wes-sarek/*.families.ped"
      phenotypes= "$TOY_DATASETS/wes-sarek/*.phenotypes.tsv"
    }
  }

  // Test on gh-action
  gha {
    params {
      variants  = "input/*.variants.vcf.gz{,.tbi}"
      pedigrees = "input/*.families.ped"
      phenotypes= "input/*.phenotypes.tsv"
    }
  }
}
